@model TheatreCMS3.Areas.Rent.Models.RentalHistory

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="rental-create--h2">Create Rental History</h2>

<script src="~/Scripts/Areas/Rent.js"></script>
<link href="~/Content/Areas/Rent.css" rel="stylesheet" />


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <div class="rental-create--form">

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="rental-create--formgroup rental-create--outline rental-create--damageoutline">
                <div class="col-md-10">
                    <div class="rental-create--font">
                        @Html.LabelFor(model => model.Rental, htmlAttributes: new { @class = "control-label col-md-2" })
                    </div>
                    <div class="col-md-10 rental-create--flex">
                        @Html.EditorFor(model => model.Rental, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Rental, "", new { @class = "text-danger" })
                    </div>

                </div>

                <div class="col-md-10 rental-create--font">
                    @Html.LabelFor(model => model.RentalDamaged, "Damaged?", htmlAttributes: new { @class = "control-label col-md-2 rental-create--damagedlabel" })

                    <div class="checkbox">
                        @Html.EditorFor(model => model.RentalDamaged)
                        @Html.ValidationMessageFor(model => model.RentalDamaged, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>


        <div class="rental-create--formgroup rental-create--incurredoutline rental-create--font">
            @Html.LabelFor(model => model.DamagesIncurred, htmlAttributes: new { @class = "control-label col-md-2", @id = "damagesLabel" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DamagesIncurred, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DamagesIncurred, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="rental-create--formgroup">
            <div class="rental-create--buttoncontainer">
                <a href="@Url.Action("Index")" class="btn rental-create--backtolistbutton">Back to List</a>

                <input type="submit" value="Create" class="btn rental-create--btndefault" />

            </div>
        </div>
    </div>

}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
